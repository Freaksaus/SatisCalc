@model IEnumerable<SatisCalc.Models.Building>;
@{
    ViewData["Title"] = "Buildings";
}

<h2>Buildings</h2>

<div class="row">
    <div class="col-md-12 pull-right">
        <a asp-action="Add">Add</a>
    </div>
</div>

@foreach (var building in Model)
{
    <div class="row">
        <div class="col-md-8">
            @building.Name
        </div>
        <div class="col-md-2">
            <a asp-action="Edit" asp-route-id="@building.Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@building.Id">Delete</a>
        </div>
    </div>
}